#!/bin/sh

win_name=$(xprop -id $(xdotool getactivewindow) | grep 'WM_NAME(STRING)' | cut -d'"' -f2)
win_class=$(xprop -id $(xdotool getactivewindow) | grep 'WM_CLASS(STRING)' | cut -d'"' -f2)

case $win_name in
  *NVIM) xdotool key ctrl+c ;;
  *)
    case $win_class in
        "kitty") xdotool key ctrl+shift+c ;;
        "tmux") xdotool key ctrl+shift+c ;;
        *) xdotool key ctrl+c ;;
    esac
    ;;
esac

