set from = "xxx@gmail.com"
set spoolfile = "+gmail/Inbox"
set copy = no
unset trash

set smtp_url = "smtps://xxx@gmail.com@smtp.gmail.com:465/"
set smtp_pass = $my_gmail_pass
set ssl_force_tls = yes

bind editor <space> noop
macro index,pager gi "<change-folder>+gmail/Inbox<enter>" "go to Inbox"
macro index,pager ga "<change-folder>+gmail/[Gmail]/All Mail<enter>" "go to Archive"
macro index,pager gs "<change-folder>+gmail/[Gmail]/Sent Mail<enter>" "go to Sent"

macro index,pager A  "<delete-message>"  "mark message as Archived"
