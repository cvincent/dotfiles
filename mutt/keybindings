bind index q noop
bind index g noop
bind pager g noop

source ~/.config/mutt/unbind

bind index,pager \Ck sidebar-prev
bind index,pager \Cj sidebar-next
bind index,pager \Co sidebar-open
bind index,pager R group-reply
bind index,pager N search-opposite
bind index,pager d half-down
bind index,pager u half-up

macro index,pager gp "<change-folder>+protonmail/Inbox<enter>" "go to ProtonMail"
macro index,pager gm "<change-folder>+gmail/Inbox<enter>" "go to Gmail"
macro index,pager gb "<change-folder>+boon/Inbox<enter>" "go to Boon"

bind index gg first-entry
bind index G last-entry

bind pager / search
bind pager j next-line
bind pager k previous-line
bind pager gg top
bind pager G bottom

macro index o "<shell-escape>$HOME/bin/pollmail<enter>" "Poll for new mail (slow)"

macro pager \cb "<pipe-message>urlscan<enter>" "get URLs"
